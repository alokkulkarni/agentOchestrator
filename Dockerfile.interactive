# Interactive Test Dockerfile
FROM python:3.11-slim

# Set working directory
WORKDIR /app

# Install system dependencies
RUN apt-get update && apt-get install -y \
    curl \
    netcat-openbsd \
    && rm -rf /var/lib/apt/lists/*

# Copy requirements
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy the entire application
COPY . /app/

# Copy Docker scripts
COPY docker/wait-for-it.sh /usr/local/bin/wait-for-it.sh
COPY docker/entrypoint-interactive.sh /usr/local/bin/entrypoint-interactive.sh
RUN chmod +x /usr/local/bin/wait-for-it.sh /usr/local/bin/entrypoint-interactive.sh

# Set Python path
ENV PYTHONPATH=/app

# Use entrypoint script
ENTRYPOINT ["/usr/local/bin/entrypoint-interactive.sh"]
