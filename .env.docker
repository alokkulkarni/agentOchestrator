# Docker Environment Variables Template
# Copy this file to .env and fill in your actual values

# ==========================================
# SHARED API KEYS
# ==========================================

# Anthropic API Key (used by both Gateway and Orchestrator)
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# AWS Credentials (for Bedrock - optional)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_SESSION_TOKEN=
AWS_REGION=us-east-1
AWS_PROFILE=

# Tavily API Key (for web search agent - optional)
TAVILY_API_KEY=

# ==========================================
# MODEL GATEWAY CONFIGURATION
# ==========================================

# Server Configuration
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8585
GATEWAY_RELOAD=false
GATEWAY_LOG_LEVEL=INFO
GATEWAY_LOG_REQUESTS=true

# Authentication (optional)
GATEWAY_REQUIRE_AUTH=false
GATEWAY_API_KEY=

# AWS Region for Gateway (uses AWS_REGION from shared section)
GATEWAY_AWS_REGION=${AWS_REGION}
GATEWAY_AWS_PROFILE=${AWS_PROFILE}

# ==========================================
# ORCHESTRATOR CONFIGURATION
# ==========================================

# Gateway URL (internal Docker network)
ORCHESTRATOR_GATEWAY_URL=http://model-gateway:8585

# ==========================================
# DOCKER COMPOSE SETTINGS
# ==========================================

# Enable/disable services
ENABLE_INTERACTIVE_TEST=true

# Logging
LOG_DRIVER=json-file
LOG_MAX_SIZE=10m
LOG_MAX_FILE=3
