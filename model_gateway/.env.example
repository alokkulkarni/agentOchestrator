# Model Gateway Environment Variables

# Server Configuration
GATEWAY_HOST=0.0.0.0
GATEWAY_PORT=8000
GATEWAY_RELOAD=false

# Authentication (optional)
GATEWAY_REQUIRE_AUTH=false
GATEWAY_API_KEY=your-gateway-api-key-here

# Logging
GATEWAY_LOG_LEVEL=INFO
GATEWAY_LOG_REQUESTS=true

# Provider Configuration

# Anthropic
GATEWAY_ANTHROPIC_API_KEY=your-anthropic-api-key-here

# AWS Bedrock
GATEWAY_AWS_REGION=us-east-1
GATEWAY_AWS_PROFILE=default
# AWS credentials can also be provided via standard AWS environment variables:
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_SESSION_TOKEN=your-session-token (if using temporary credentials)
