{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Data Processor Output Schema",
  "description": "Schema for validating data processor agent outputs",
  "type": "object",
  "required": ["operation", "input_count", "output_count", "result"],
  "properties": {
    "operation": {
      "type": "string",
      "description": "The operation performed on the data",
      "enum": ["transform", "filter", "aggregate", "sort"]
    },
    "input_count": {
      "type": "integer",
      "description": "Number of input records",
      "minimum": 0
    },
    "output_count": {
      "type": "integer",
      "description": "Number of output records",
      "minimum": 0
    },
    "result": {
      "description": "The processed result (array for most ops, object for aggregate)",
      "oneOf": [
        {
          "type": "array",
          "description": "Array of processed records",
          "items": {
            "type": "object"
          }
        },
        {
          "type": "object",
          "description": "Aggregated result object"
        }
      ]
    },
    "filters_applied": {
      "type": "object",
      "description": "Filters or parameters applied during processing",
      "properties": {
        "select": {
          "type": "array",
          "description": "Fields selected (transform)",
          "items": {
            "type": "string"
          }
        },
        "rename": {
          "type": "object",
          "description": "Field renaming mapping (transform)"
        },
        "conditions": {
          "type": "object",
          "description": "Filter conditions (filter)"
        },
        "group_by": {
          "type": "string",
          "description": "Field to group by (aggregate)"
        },
        "aggregations": {
          "type": "array",
          "description": "Aggregation functions applied",
          "items": {
            "type": "string",
            "enum": ["count", "sum", "avg", "min", "max"]
          }
        },
        "sort_by": {
          "type": "string",
          "description": "Field to sort by (sort)"
        },
        "reverse": {
          "type": "boolean",
          "description": "Whether to reverse sort order"
        }
      }
    },
    "metadata": {
      "type": "object",
      "description": "Additional processing metadata",
      "properties": {
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "processing_time_ms": {
          "type": "number",
          "minimum": 0
        }
      }
    }
  }
}
