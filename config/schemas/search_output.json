{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Search Output Schema",
  "description": "Schema for validating search agent outputs",
  "type": "object",
  "required": ["query", "results", "total_count"],
  "properties": {
    "query": {
      "type": "string",
      "description": "The original search query",
      "minLength": 1
    },
    "results": {
      "type": "array",
      "description": "Array of search results",
      "items": {
        "type": "object",
        "required": ["id", "title", "relevance"],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique identifier for the result"
          },
          "title": {
            "type": "string",
            "description": "Title of the result"
          },
          "content": {
            "type": "string",
            "description": "Content or excerpt"
          },
          "relevance": {
            "type": "number",
            "description": "Relevance score (0-1)",
            "minimum": 0,
            "maximum": 1
          },
          "metadata": {
            "type": "object",
            "description": "Additional metadata"
          }
        }
      }
    },
    "total_count": {
      "type": "integer",
      "description": "Total number of results found",
      "minimum": 0
    },
    "page": {
      "type": "integer",
      "description": "Current page number",
      "minimum": 1
    },
    "has_more": {
      "type": "boolean",
      "description": "Whether there are more results available"
    }
  }
}
